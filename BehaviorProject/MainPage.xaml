<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:BehaviorProject" 
             x:Class="BehaviorProject.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:SwitchTappedEventArgsConverter x:Key="SwitchTappedEventArgsConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
        <Label Text="Toggle me !" HorizontalOptions="Center"/>
        <Switch>
            <Switch.Behaviors>
                <local:SwitchBehavior Command="{Binding MySwitchCommand}" Converter="{StaticResource SwitchTappedEventArgsConverter}" />
            </Switch.Behaviors>
        </Switch>
        <Label Text="{Binding SwitchValue}" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>